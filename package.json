{
  "name": "zora-finale-wd",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build --turbopack",
    "dev": "next dev --turbopack",
    "check": "next lint && tsc --noEmit",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "npx dotenv-cli -e .env.local -- drizzle-kit migrate",
    "db:migrate-sell-on-share": "npx dotenv-cli -e .env.local -- npx tsx scripts/migrate-sell-on-share-values.ts",
    "db:populate-bid-shares": "npx dotenv-cli -e .env.local -- npx tsx scripts/populate-bid-shares.ts",
    "test:bid-shares": "npx tsx scripts/test-bid-shares.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/migrate-to-db.ts",
    "db:seed-bids": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/migrate-bids-to-db.ts",
    "db:test": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/test-db.ts",
    "db:connection": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/test-connection.ts",
    "db:update-auction": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/update-auction-settlement.ts",
    "aggregator": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/production-bid-aggregator.ts",
    "test-json-storage": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/test-json-storage.ts",
    "bid-finalized": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/production-bid-finalized-aggregator.ts",
    "test-finalized-storage": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/test-bid-finalized-storage.ts",
    "collect-all-events": "npm run test-json-storage && npm run test-finalized-storage",
    "collect-all-events-slow": "npm run test-json-storage && sleep 10 && npm run test-finalized-storage",
    "aggregator-slow": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/production-bid-aggregator.ts",
    "bid-finalized-slow": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/production-bid-finalized-aggregator.ts",
    "aggregator-ultra-slow": "CHUNK_SIZE=1000 CHUNK_DELAY_MS=5000 npx dotenv-cli -e .env.local -- npx tsx src/scripts/production-bid-aggregator.ts",
    "bid-finalized-ultra-slow": "CHUNK_SIZE=1000 CHUNK_DELAY_MS=5000 npx dotenv-cli -e .env.local -- npx tsx src/scripts/production-bid-finalized-aggregator.ts",
    "collect-all-events-ultra-slow": "npm run aggregator-ultra-slow && sleep 20 && npm run bid-finalized-ultra-slow",
    "bid-finalized-debug": "DEBUG_DECODE=1 npx dotenv-cli -e .env.local -- npx tsx src/scripts/production-bid-finalized-aggregator.ts",
    "check-active-bids": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/check-active-bids-contract.ts",
    "deploy:production": "node scripts/deploy-production.js",
    "deploy:initial": "node scripts/deploy-production.js --seed",
    "fetch-recent-bids": "npx dotenv-cli -e .env.local -- npx tsx src/scripts/fetch-recent-bid-events.ts"
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "^2.2.6",
    "@tanstack/react-query": "^5.69.0",
    "alchemy-sdk": "^3.6.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "lucide-react": "^0.515.0",
    "next": "^15.2.3",
    "postgres": "^3.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "viem": "^2.31.0",
    "wagmi": "^2.15.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.2.3",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.15",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  },
  "cweb3aMetadata": {
    "initVersion": "0.6.0"
  },
  "packageManager": "npm@10.5.2"
}
